<Window x:Class="VasuthaloAdmin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VasuthaloAdmin"
        mc:Ignorable="d"
        Title="Vasúthálózatok" Height="1080" Width="1920">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label>Felhasználónév:</Label>
            <TextBox Width="125" x:Name="tbUsername" Height="26"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Width="93">Jelszó:</Label>
            <TextBox Width="125" Name="tbPassword"></TextBox>
        </StackPanel>
        <Button x:Name="btnLogin" Height="30" Width="80" Click="btnLogin_Click" Background="#c705fc">Bejelentkezés</Button>
    </StackPanel>
</Window>
